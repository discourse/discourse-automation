<section class="field category-field">
  <div class="control-group">
    {{fields/da-field-label label=label}}

    <div class="controls">
      {{category-chooser
        value=field.metadata.value
        onChange=(action (mut field.metadata.value))
        options=(hash clearable=true disabled=isDisabled)
      }}

      {{fields/da-field-description description=description}}
    </div>
  </div>
</section>
