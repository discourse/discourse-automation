<section class="field category-field">
  <div class="control-group">
    <Fields::DaFieldLabel @label={{label}} @field={{field}} />

    <div class="controls">
      <CategoryChooser
        @value={{field.metadata.value}}
        @onChange={{action (mut field.metadata.value)}}
        @options={{hash clearable=true disabled=field.isDisabled}}
      />

      <Fields::DaFieldDescription @description={{description}} />
    </div>
  </div>
</section>