<section class="field group-field">
  <div class="control-group">
    {{fields/da-field-label label=label}}

    <div class="controls">
      {{group-chooser
        content=allGroups
        value=field.metadata.value
        labelProperty="name"
        onChange=(action "setGroupField")
        options=(hash maximum=1 disabled=isDisabled)
      }}

      {{fields/da-field-description description=description}}
    </div>
  </div>
</section>
