<section class="field group-field">
  <div class="control-group">
    {{fields/da-field-label label=label field=field}}

    <div class="controls">
      <GroupChooser
        @content={{allGroups}}
        @value={{field.metadata.value}}
        @labelProperty="name"
        @onChange={{action "setGroupField"}}
        @options={{hash maximum=1 disabled=field.isDisabled}}
      />

      {{fields/da-field-description description=description}}
    </div>
  </div>
</section>