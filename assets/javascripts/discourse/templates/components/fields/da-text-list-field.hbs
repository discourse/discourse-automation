<section class="field text-list-field">
  <div class="control-group">
    <Fields::DaFieldLabel @label={{label}} @field={{field}} />

    <div class="controls">
      <MultiSelect
        @value={{field.metadata.value}}
        @content={{field.metadata.value}}
        @onChange={{action (mut field.metadata.value)}}
        @nameProperty={{null}}
        @valueProperty={{null}}
        @options={{hash allowAny=true disabled=field.isDisabled}}
      />

      <Fields::DaFieldDescription @description={{description}} />
    </div>
  </div>
</section>