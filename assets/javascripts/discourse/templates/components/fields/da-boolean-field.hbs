<section class="field boolean-field">
  <div class="control-group">
    <Fields::DaFieldLabel @label={{label}} @field={{field}} />

    <div class="controls">
      <Input
        @type="checkbox"
        @checked={{field.metadata.value}}
        @input={{action (mut field.metadata.value) value="target.checked"}}
        @disabled={{field.isDisabled}}
      />

      <Fields::DaFieldDescription @description={{description}} />
    </div>
  </div>
</section>