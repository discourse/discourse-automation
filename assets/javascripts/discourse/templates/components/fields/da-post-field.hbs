<section class="field post-field">
  <div class="control-group">
    <Fields::DaFieldLabel @label={{label}} @field={{field}} />

    <div class="controls">
      <div class="field-wrapper">
        <DEditor @value={{field.metadata.value}} />

        <Fields::DaFieldDescription @description={{description}} />

        {{#if displayPlaceholders}}
          <PlaceholdersList
            @currentValue={{field.metadata.value}}
            @placeholders={{placeholders}}
          />
        {{/if}}
      </div>
    </div>
  </div>
</section>