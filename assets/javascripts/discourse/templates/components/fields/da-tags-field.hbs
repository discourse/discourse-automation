<section class="field tags-field">
  <div class="control-group">
    <Fields::DaFieldLabel @label={{label}} @field={{field}} />

    <div class="controls">
      <TagChooser
        @tags={{field.metadata.value}}
        @onChange={{action (mut field.metadata.value)}}
        @options={{hash allowAny=false disabled=field.isDisabled}}
      />

      <Fields::DaFieldDescription @description={{description}} />
    </div>
  </div>
</section>