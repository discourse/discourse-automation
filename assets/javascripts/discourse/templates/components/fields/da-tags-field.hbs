<section class="field tags-field">
  <div class="control-group">
    {{fields/da-field-label label=label}}

    <div class="controls">
      {{tag-chooser
        tags=field.metadata.value
        onChange=(action (mut field.metadata.value))
        options=(hash
          allowAny=false
          disabled=isDisabled
        )
      }}

      {{fields/da-field-description description=description}}
    </div>
  </div>
</section>
