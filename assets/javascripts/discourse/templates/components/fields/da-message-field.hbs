<section class="field message-field">
  <div class="control-group">
    {{fields/da-field-label label=label field=field}}

    <div class="controls">
      <div class="field-wrapper">
        {{textarea
          value=field.metadata.value
          input=(action (mut field.metadata.value) value="target.value")
          disabled=field.isDisabled
        }}

        {{fields/da-field-description description=description}}

        {{#if displayPlaceholders}}
          {{placeholders-list
            currentValue=field.metadata.value
            placeholders=placeholders
          }}
        {{/if}}
      </div>
    </div>
  </div>
</section>