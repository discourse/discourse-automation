<section class="field categories-field">
  <div class="control-group">
    <Fields::DaFieldLabel @label={{label}} @field={{field}} />

    <div class="controls">
      <CategorySelector
        @categories={{categories}}
        @onChange={{action "onChangeCategories"}}
        @options={{hash clearable=true disabled=field.isDisabled}}
      />

      <Fields::DaFieldDescription @description={{description}} />
    </div>
  </div>
</section>